<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_de_app"
    tools:context=".Fragments.LogIn">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="600dp" />

    <Button
        android:id="@+id/btnRecContrasena"
        android:layout_width="162dp"
        android:layout_height="17dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:text="多Has olvidado tu contrase単a?"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#1248BE"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/CboxMantenerSesion"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="216dp"
        android:layout_height="61dp"
        android:background="@drawable/titulo_app"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextContrasenaLogIn"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:background="@drawable/borde_texto"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:inputType="textPersonName"
        android:password="true"
        android:shadowColor="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnRecContrasena"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:text="Email"
        android:textColor="#1F48C3"
        app:layout_constraintBottom_toTopOf="@+id/editTextMailLogIn"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <EditText
        android:id="@+id/editTextMailLogIn"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/borde_texto"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:inputType="textPersonName"
        android:password="false"
        android:shadowColor="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editTextContrasenaLogIn"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrase単a"
        android:textColor="#1F48C3"
        app:layout_constraintBottom_toTopOf="@+id/editTextContrasenaLogIn"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/editTextMailLogIn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnIrRegistro"
        android:layout_width="188dp"
        android:layout_height="29dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:text="多no tenes cuenta todavia? Registrate"
        android:textColor="#1248BE"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginGoogle"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82079345" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:backgroundTint="#1248BE"
        android:text="Iniciar Sesion"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnIrRegistro"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <CheckBox
        android:id="@+id/CboxMantenerSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:buttonTint="#1248BE"
        android:checked="false"
        android:text="Mantener sesion iniciada"
        android:textColor="#1248BE"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogIn"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <Button
        android:id="@+id/btnLoginGoogle"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

</androidx.constraintlayout.widget.ConstraintLayout>